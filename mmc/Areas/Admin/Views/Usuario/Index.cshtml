
@{
    ViewData["Title"] = "Lista de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>

<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Usuarios</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary text-white" asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-plus"></i>Crean Nuevo Usuario</a>
    </div>
</div>

<br />

<div class="p-4 border rounded">
    <table id="tblDatos" class="table-striped table-bordered table-hover" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>UserName</th>
                <th>Nombres</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Telefono</th>
                <th>Role</th>

            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/usuario.js"></script>
}
